<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransport"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/bg_dialog_radius"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close_dialog_notification"
            android:layout_width="11dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:padding="@dimen/margin_least"
            android:src="@mipmap/ic_close_dialog" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/notice_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="开启推送通知"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/fontSize_middle"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:text="我们为您提供实时重要新闻、"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="活动福利。"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_middle" />

        <TextView
            android:id="@+id/btn_open_dialog_notification"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_big"
            android:background="@drawable/bg_red_raduis"
            android:gravity="center"
            android:text="立即开启"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_middle" />

        <TextView
            android:id="@+id/btn_never_dialog_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_least"
            android:layout_marginBottom="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="不再提示"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_middle" />

    </LinearLayout>

</RelativeLayout>
