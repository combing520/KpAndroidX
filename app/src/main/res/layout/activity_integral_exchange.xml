<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="cn.cc1w.app.ui.ui.usercenter.integral.IntegralExchangeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_navigation"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/img_back_integralExchange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_least"
            android:padding="6dp"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分兑换"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_big" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_spit"
        android:background="@color/colorGray" />
    <!--Tabs-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/colorWhite">

        <!--我的积分-->
        <LinearLayout
            android:id="@+id/ll_integral_integralExchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/width_icon_small"
                android:layout_height="@dimen/height_icon_small"
                android:src="@mipmap/ccwb_user_setting_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="我的积分"
                android:textSize="@dimen/fontSize_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="1350"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontSize_small" />

        </LinearLayout>


        <!--兑换记录-->
        <LinearLayout
            android:id="@+id/ll_record_integralExchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/width_icon_small"
                android:layout_height="@dimen/height_icon_small"
                android:src="@mipmap/ccwb_user_function_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="兑换记录"
                android:textSize="@dimen/fontSize_normal" />
        </LinearLayout>

    </LinearLayout>

    <!--底部Content-->
    <FrameLayout
        android:id="@+id/content_integralExchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
