<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:gravity="center_vertical">

        <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
            android:id="@+id/img_avatar_item_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            app:roundHeight="20dp"
            app:roundWidth="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small">

            <TextView
                android:id="@+id/txt_type_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontSize_middle" />

            <TextView
                android:id="@+id/txt_time_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorTxtLabel"
                android:textSize="@dimen/fontSize_normal" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_describe_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle" />
</LinearLayout>
