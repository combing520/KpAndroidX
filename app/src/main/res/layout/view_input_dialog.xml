<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransport"
    android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/input_line_bg" />


    <cn.cc1w.app.ui.widget.input.SoftKeyboardRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE">

        <LinearLayout
            android:id="@+id/send_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_input_btn_send"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:text="发表"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontSize_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/detail_add_comment_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/send_layout"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="7dp"
            android:layout_toLeftOf="@id/send_layout"
            android:background="@drawable/bg_gray_round"
            android:gravity="top|left"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:minHeight="26dp"
            android:minLines="1"
            android:longClickable="false"
            android:hint="写评论..."
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/colorBlack"
            android:textColorHint="#89898A"
            android:textCursorDrawable="@drawable/edit_color_cursor"
            android:textSize="@dimen/fontSize_normal" />


    </cn.cc1w.app.ui.widget.input.SoftKeyboardRelativeLayout>

</LinearLayout>