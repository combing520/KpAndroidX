<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recommend_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_5"
    android:paddingTop="@dimen/margin_middle">
    <TextView
        android:id="@+id/txt_recommend_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 猜你喜欢 -"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_big" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_spit"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@color/colorBlack" />
</LinearLayout>