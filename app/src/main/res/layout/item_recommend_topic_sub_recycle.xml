<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_least">

    <ImageView
        android:id="@+id/img_recommend_sub_post"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_recommend_sub_play"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:src="@mipmap/ic_play_video_paikew"
        app:layout_constraintEnd_toEndOf="@id/img_recommend_sub_post"
        app:layout_constraintTop_toTopOf="@id/img_recommend_sub_post" />

</androidx.constraintlayout.widget.ConstraintLayout>
