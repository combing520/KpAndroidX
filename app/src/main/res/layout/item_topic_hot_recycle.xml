<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/height_spit"
    android:background="@color/colorWhite"
    android:padding="@dimen/margin_small">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontSize_big" />

    <TextView
        android:id="@+id/txt_item_topic_hot_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_weight="1"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle" />

    <TextView
        android:id="@+id/txt_item_topic_hot_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:textColor="@color/colorTxtLabel"
        android:textSize="@dimen/fontSize_normal" />
</LinearLayout>
