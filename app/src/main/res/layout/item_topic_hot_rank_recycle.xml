<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/height_spit"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/margin_middle"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small"
    android:paddingTop="@dimen/margin_middle">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_item_topic_hot_rank_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_normal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_item_topic_hot_rank_rank"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_topic_hot_rank_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_weight="1"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle" />

    <TextView
        android:id="@+id/txt_item_topic_hot_rank_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:textColor="@color/colorTxtContent"
        android:textSize="@dimen/fontSize_normal" />
</LinearLayout>
