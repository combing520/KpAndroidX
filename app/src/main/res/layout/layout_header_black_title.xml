<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_navigation"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_back_header_black_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_least"
        android:padding="6dp"
        android:src="@mipmap/left" />

    <TextView
        android:id="@+id/txt_header_black_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle"
        android:visibility="gone" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/margin_least"
        android:padding="6dp"
        android:src="@mipmap/ccwb_share_icon"
        android:visibility="gone" />

</LinearLayout>
