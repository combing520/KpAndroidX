<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_middle"
    android:gravity="right"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small">

    <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
        android:id="@+id/img_item_post_broke"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:scaleType="centerCrop"
        app:roundHeight="@dimen/margin_small"
        app:roundWidth="@dimen/margin_small" />

    <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
        android:id="@+id/img_avatar_post_broke"
        style="@style/img_avatar_broke"
        app:roundHeight="20dp"
        app:roundWidth="20dp" />
</LinearLayout>
