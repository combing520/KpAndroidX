<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_header_not_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头像-->
            <RelativeLayout style="@style/itemSetting">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="头像" />

                <LinearLayout
                    android:id="@+id/ll_avatar_accountManage"
                    style="@style/itemAccountManagerRightContainer">

                    <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
                        android:id="@+id/img_avatar_accountManage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/img_avatar_default"
                        app:roundHeight="21dp"
                        app:roundWidth="21dp" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />
                </LinearLayout>
            </RelativeLayout>
            <!--昵称-->
            <RelativeLayout
                android:id="@+id/relate_nickname_accountManage"
                style="@style/item2Setting">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="昵称" />

                <LinearLayout style="@style/itemAccountManagerRightContainer">

                    <TextView
                        android:id="@+id/txt_nickname_accountManage"
                        style="@style/itemLabel2Setting" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />

                </LinearLayout>

            </RelativeLayout>
            <!--手机号-->
            <RelativeLayout
                android:id="@+id/relate_mobile_accountManage"
                style="@style/item2Setting">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="手机号" />

                <LinearLayout style="@style/itemAccountManagerRightContainer">

                    <TextView
                        android:id="@+id/txt_phone_accountManage"
                        style="@style/itemLabel2Setting" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />
                </LinearLayout>
            </RelativeLayout>
            <!--修改密码-->
            <RelativeLayout
                android:id="@+id/relate_pwd_accountManage"
                style="@style/item2Setting">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="修改密码" />

                <ImageView
                    style="@style/right_arrow"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relate_account_cancelled_accountManage"
                style="@style/item2Setting">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="注销账户" />

                <ImageView
                    style="@style/right_arrow"
                    android:src="@mipmap/right" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_middle" />
            <!--绑定QQ-->
            <RelativeLayout
                android:id="@+id/relate_qq_accountManage"
                style="@style/item2Setting"
                android:visibility="gone">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="绑定QQ" />

                <LinearLayout style="@style/itemAccountManagerRightContainer">

                    <TextView
                        android:id="@+id/txt_qq_accountManage"
                        style="@style/itemLabel2Setting"
                        android:text="未绑定" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />
                </LinearLayout>
            </RelativeLayout>
            <!--绑定微信-->
            <RelativeLayout
                android:id="@+id/relate_wx_accountManage"
                style="@style/item2Setting"
                android:visibility="gone">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="绑定微信" />

                <LinearLayout style="@style/itemAccountManagerRightContainer">

                    <TextView
                        android:id="@+id/txt_wx_accountManage"
                        style="@style/itemLabel2Setting"
                        android:text="未绑定" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />
                </LinearLayout>
            </RelativeLayout>
            <!--绑定微博-->
            <RelativeLayout
                android:id="@+id/relate_sina_accountManage"
                style="@style/item2Setting"
                android:visibility="gone">

                <TextView
                    style="@style/itemLabelSetting"
                    android:text="绑定微博" />

                <LinearLayout style="@style/itemAccountManagerRightContainer">

                    <TextView
                        android:id="@+id/txt_sina_accountManage"
                        style="@style/itemLabel2Setting"
                        android:text="未绑定" />

                    <ImageView
                        style="@style/right_arrow2"
                        android:src="@mipmap/right" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
