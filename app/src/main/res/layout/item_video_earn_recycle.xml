<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_earn"
    android:background="@color/colorBlack">
    <ImageView
        android:id="@+id/img_item_earn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@mipmap/ic_play_video_paikew" />

    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_click_number_video_paikew" />

        <TextView
            android:id="@+id/txt_cnt_play_earn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="1.2W次播放"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_least" />
    </LinearLayout>
</RelativeLayout>
