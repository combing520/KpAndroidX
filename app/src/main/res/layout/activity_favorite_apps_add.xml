<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--导航头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_navigation"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/img_back_apps_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_least"
            android:padding="6dp"
            android:src="@mipmap/left" />

        <ImageView
            android:id="@+id/img_search_apps_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/margin_small"
            android:padding="6dp"
            android:src="@mipmap/ic_search_black"
            android:visibility="gone" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_apps_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:overScrollMode="never"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="0dp"
            app:tabMinWidth="0dp"
            app:tabPaddingEnd="@dimen/margin_10"
            app:tabPaddingStart="@dimen/margin_10"
            app:tabSelectedTextColor="@color/colorTxtTitle"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabTextColor="@color/colorTxtLabel" />

    </LinearLayout>

    <!--顶部-->


    <!--底部内容-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_apps_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_spit" />


</LinearLayout>
