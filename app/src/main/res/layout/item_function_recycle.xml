<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_item_function"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_middle">

    <ImageView
        android:id="@+id/img_item_function"
        android:layout_width="@dimen/width_icon_function"
        android:layout_height="@dimen/height_icon_function"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_item_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_item_function"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_small" />
</RelativeLayout>
