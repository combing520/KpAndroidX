<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/container_dialog_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="150dp"
    android:minWidth="150dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dialog_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/message_audio" />

    <ImageView
        android:id="@+id/img_cancel_dialog_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_speak_cancel_broke"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_dialog_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:text="手指上滑,取消发送"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fontSize_small" />


</LinearLayout>
