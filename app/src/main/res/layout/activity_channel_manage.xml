<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.home.home.ChannelManageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_middle">

        <ImageButton
            android:id="@+id/channel_manage_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_back"
            android:padding="@dimen/margin_10" />

        <TextView
            android:id="@+id/channel_manage_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_5"
            android:text="保存"
            android:textColor="#221814"
            android:textSize="@dimen/fontSize_normal" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_middle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_raduis_15"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_least"
            android:paddingRight="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_least"
            android:text="我的关注"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_normal" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/bg_triangle_turn" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/channel_manage_column_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:overScrollMode="never" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_middle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_raduis_15"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_least"
            android:paddingRight="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_least"
            android:text="所有频道"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_normal" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/bg_triangle_turn" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/channel_manage_all_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:overScrollMode="never" />
</LinearLayout>