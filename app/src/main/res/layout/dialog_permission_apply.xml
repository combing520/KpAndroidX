<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_middle"
        android:src="@mipmap/ccwb_permission_file" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/margin_least"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_middle"
        android:text="开屏新闻需要获取SD卡读写权限用于读写缓存、获取地理位置权限用于展示位置信息"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_spit"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="好心授权"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize_middle" />

        <View
            android:layout_width="@dimen/height_spit"
            android:layout_height="44dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/txt_dialog_reject"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="残忍拒绝"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_middle" />

    </LinearLayout>
</LinearLayout>
