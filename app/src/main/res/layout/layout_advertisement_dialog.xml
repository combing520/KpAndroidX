<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/banner_dialog_ad"
        android:layout_width="0px"
        android:layout_height="0px"
        tl:banner_indicator_height="@dimen/width_indicator"
        tl:banner_indicator_normal_color="@color/colorGray"
        tl:banner_indicator_normal_width="@dimen/width_indicator"
        tl:banner_indicator_selected_color="@color/colorPrimary"
        tl:banner_indicator_selected_width="@dimen/width_indicator"
        tl:layout_constraintBottom_toBottomOf="parent"
        tl:layout_constraintDimensionRatio="3:4"
        tl:layout_constraintEnd_toEndOf="parent"
        tl:layout_constraintStart_toStartOf="parent"
        tl:layout_constraintTop_toTopOf="parent"
        tl:layout_constraintWidth_percent="0.75" />

    <com.youth.banner.indicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_dialog_ad" />

    <ImageView
        android:id="@+id/img_dialog_ad"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:padding="@dimen/margin_least"
        android:src="@mipmap/ic_close_dialog_ad"
        app:layout_constraintBottom_toTopOf="@id/banner_dialog_ad"
        app:layout_constraintRight_toRightOf="@id/banner_dialog_ad" />

</androidx.constraintlayout.widget.ConstraintLayout>