<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/height_spit"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_middle"
    android:paddingTop="@dimen/margin_middle">
    <!--组新闻中 视频的推送 包括 【视频】【视频组】【直播】-->
    <!--title-->
    <TextView
        android:id="@+id/txt_item_title_news_group_video_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:lineSpacingExtra="@dimen/margin_least"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/fontSize_big"
        android:textStyle="bold" />

    <!--新闻 时间 和 类型 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle">

        <TextView
            android:id="@+id/txt_item_time_news_group_video_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_normal" />

        <TextView
            android:id="@+id/txt_item_source_news_group_video_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_normal" />

    </LinearLayout>

    <!--新闻的图片和标题【此处的标题】和新闻的标题一致-->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_news_group_video_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/img_item_post_news_group_video_push"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_play" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_item_title_small_news_group_video_push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingBottom="@dimen/margin_middle"
                android:paddingTop="@dimen/margin_middle"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--描述-->
    <TextView
        android:id="@+id/txt_item_describe_news_group_video_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_middle"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/margin_least"
        android:maxLines="6"
        android:textColor="@color/colorTxtContent"
        android:textSize="@dimen/fontSize_middle" />
</LinearLayout>
