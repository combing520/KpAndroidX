<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorWhite"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_news_title_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/margin_least"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_middle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_item_news_source_focus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_item_news_source_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontSize_least" />

            <TextView
                android:id="@+id/txt_item_news_time_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:textColor="@color/colorTxtLabel"
                android:textSize="@dimen/fontSize_least" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_item_news_focus"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:scaleType="centerCrop" />
</LinearLayout>
