<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_header_not_title" />

    <!--顶部切换菜单-->
    <LinearLayout style="@style/container_tab_login">

        <TextView
            android:id="@+id/txt_login_fast_login"
            style="@style/txt_tab_login"
            android:text="@string/hint_login_fast" />

        <View style="@style/line_spit_login" />

        <TextView
            android:id="@+id/txt_login_normal_login"
            style="@style/txt_tab_login"
            android:text="账号密码登录" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_content_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
