<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_describe_record_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_middle" />

        <TextView
            android:id="@+id/txt_time_record_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_money_record_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle" />
</LinearLayout>
