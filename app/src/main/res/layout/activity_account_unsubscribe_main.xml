<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.usercenter.usercenter.AccountUnsubscribeMainActivity">

    <include layout="@layout/layout_header_not_title" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:padding="@dimen/margin_10"
                android:text="接受上述协议"
                android:textSize="@dimen/fontSize_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_unsubscribe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btn"
                android:layout_marginHorizontal="@dimen/margin_middle"
                android:layout_marginBottom="@dimen/margin_middle"
                android:gravity="center"
                android:text="确认注销"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontSize_big"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>