<?xml version="1.0" encoding="utf-8"?>
<app.cloud.ccwb.cn.linlibrary.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.usercenter.PromotionCodeActivity">

    <include
        layout="@layout/layout_header_not_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_navigation" />


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_promotion"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large"
        android:visibility="gone"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%">

        <ImageView
            android:id="@+id/img_qr_code_promotion"
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/number_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize_big"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_img_num_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:ellipsize="end"
        android:lines="1"
        android:text="已推广人数:10000"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontSize_normal" />


    <TextView
        android:id="@+id/tv_hint_promotion"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_btn"
        android:layout_below="@id/tv_img_num_promotion"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/bg_btn_disable"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="已填写推广码"
        android:textColor="@color/colorTxtLabel"
        android:textSize="@dimen/fontSize_normal"
        android:visibility="gone"
        app:layout_marginLeftPercent="10%"
        app:layout_widthPercent="80%" />


    <LinearLayout
        android:id="@+id/container_tools_qr"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_btn"
        android:layout_below="@id/tv_img_num_promotion"
        android:layout_marginTop="@dimen/margin_large"
        android:visibility="gone"
        app:layout_marginLeftPercent="10%"
        app:layout_widthPercent="80%">

        <EditText
            android:id="@+id/edit_code_promotion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_disable"
            android:ellipsize="end"
            android:hint="请输入推广人的6位推广码"
            android:lines="1"
            android:longClickable="false"
            android:maxLength="6"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textSize="@dimen/fontSize_normal" />


        <TextView
            android:id="@+id/btn_create_promotion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@drawable/bg_btn_promotion"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_big" />

    </LinearLayout>


</app.cloud.ccwb.cn.linlibrary.percent.PercentRelativeLayout>