<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/margin_middle">

    <!--直播中的 纯文本-->
    <TextView
        android:id="@+id/txt_time_txt_live_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/colorTxtLabel"
        android:textSize="@dimen/fontSize_small" />

    <!--管理员信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_navigation"
        android:gravity="center_vertical">

        <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
            android:id="@+id/img_avatar_txt_live_host"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="center"
            app:roundHeight="18dp"
            app:roundWidth="18dp" />

        <TextView
            android:id="@+id/txt_name_txt_live_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize_middle" />

    </LinearLayout>

    <!--title-->
    <TextView
        android:id="@+id/txt_title_txt_live_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle"
        android:textStyle="bold" />

    <!--describe-->
    <TextView
        android:id="@+id/txt_describer_txt_live_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:lineSpacingExtra="@dimen/margin_least"
        android:textColor="@color/colorTxtContent"
        android:textSize="@dimen/fontSize_normal" />


</LinearLayout>
