<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/height_spit"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <!--积分排名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_navigation"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

        <!--左边的信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_place_rank_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTxtTitle"
                android:textSize="@dimen/fontSize_small" />

            <ImageView
                android:id="@+id/img_prize_rank_integral"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="gone" />

        </LinearLayout>

        <!--中间信息-->
        <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
            android:id="@+id/img_avatar_rank_integral"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            app:roundHeight="18dp"
            android:scaleType="centerCrop"
            app:roundWidth="18dp" />

        <TextView
            android:id="@+id/txt_username_rank_integral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_normal" />

        <!--右侧积分-->
        <TextView
            android:id="@+id/txt_score_total_rank_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_normal" />
    </LinearLayout>
    <View
        android:id="@+id/view_spit_rank_integral"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_small"
        android:background="@color/colorGray" />
</LinearLayout>
