<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:background="@color/colorWhite"
    android:paddingRight="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
            android:id="@+id/img_item_pic_news_normal_home"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:border_width="0dp"
            app:corner_radius="6dp"
            app:is_oval="false"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img_layout"
        android:layout_marginTop="20dp"
        android:background="#E4E5E4" />


    <TextView
        android:id="@+id/txt_item_name_apps_news_normal_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/img_layout"
        android:text="123123"
        android:textColor="@color/colorTxtLabel"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/img_item_time_news_normal_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/txt_item_name_apps_news_normal_home"
        android:layout_weight="1"
        android:text="123123"
        android:textColor="@color/colorTxtLabel"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/txt_item_title_news_normal_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/txt_item_name_apps_news_normal_home"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/img_layout"
        android:ellipsize="end"
        android:gravity="left|top"
        android:maxLines="2"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_middle"
        app:layout_constraintRight_toRightOf="parent" />

</RelativeLayout>

