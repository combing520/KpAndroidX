<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="@dimen/height_spit"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/txt_rank_rank_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:gravity="center"
        android:minWidth="30dp"
        android:textColor="@color/colorTxtTitle"
        android:textSize="@dimen/fontSize_normal" />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_post_rank_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/img_player_rank_recycle"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_least"
            android:src="@mipmap/ic_play_video_paikew"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_title_rank_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
                android:id="@+id/img_avatar_rank_recycle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:roundHeight="15dp"
                app:roundWidth="15dp" />

            <TextView
                android:id="@+id/txt_username_rank_recycle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorTxtLabel"
                android:textSize="@dimen/fontSize_small" />


            <TextView
                android:id="@+id/txt_cnt_rank_recycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorTxtLabel"
                android:textSize="@dimen/fontSize_small" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
