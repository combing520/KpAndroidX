<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <app.cloud.ccwb.cn.linlibrary.viewpager.LinViewpager
        android:id="@+id/viewPager_detail_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />


    <app.cloud.ccwb.cn.linlibrary.blankview.BlankView
        android:id="@+id/blankView_detail_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_back_detail_apps"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_big"
        android:padding="@dimen/margin_least"
        android:src="@mipmap/ic_del_detail_pic" />


    <ImageView
        android:id="@+id/img_share_detail_album"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_small"
        android:padding="6dp"
        android:src="@mipmap/ccwb_share_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3000"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title_detail_apps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontSize_big" />

            <TextView
                android:id="@+id/txt_pos_current_detail_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontSize_middle" />

            <TextView
                android:id="@+id/txt_cnt_detail_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontSize_middle" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_describe_detail_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_normal" />
    </LinearLayout>
</RelativeLayout>
