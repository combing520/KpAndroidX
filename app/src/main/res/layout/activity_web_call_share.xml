<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHalfTransport"
    android:fitsSystemWindows="true"
    tools:context=".ui.share.WebCallShareActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingTop="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_middle"
            app:rowCount="1">

            <!--朋友圈-->
            <LinearLayout
                android:id="@+id/ll_share_circle_wx"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:visibility="gone"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_circle_friend_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="朋友圈"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/fontSize_small" />

            </LinearLayout>

            <!--微信-->
            <LinearLayout
                android:id="@+id/ll_share_friend_wx"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:visibility="gone"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_wx_friend_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="微信"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/fontSize_small" />
            </LinearLayout>

            <!--微博-->
            <LinearLayout
                android:id="@+id/ll_share_sina"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:visibility="gone"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_sina_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="微博"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/fontSize_small" />

            </LinearLayout>

            <!--QQ-->
            <LinearLayout
                android:id="@+id/ll_share_friend_qq"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:visibility="gone"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_qq_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="QQ"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/fontSize_small" />
            </LinearLayout>

            <!--小程序-->
            <LinearLayout
                android:id="@+id/ll_share_friend_mini"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:visibility="gone"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_share_mini" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="小程序"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/fontSize_small" />
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ededed" />
        <!--底部取消-->
        <TextView
            android:id="@+id/txt_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:paddingTop="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_middle"
            android:text="取消分享"
            android:textColor="@color/colorTxtContent"
            android:textSize="@dimen/fontSize_middle" />

    </LinearLayout>

</RelativeLayout>