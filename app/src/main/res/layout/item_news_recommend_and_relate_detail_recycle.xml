<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small">

    <app.cloud.ccwb.cn.linlibrary.image.RoundAngleImageView
        android:id="@+id/img_item_pic_news_normal_home"
        android:layout_width="110dp"
        android:layout_height="74dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:scaleType="centerCrop"
        app:roundHeight="@dimen/margin_5"
        app:roundWidth="@dimen/margin_5" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_item_title_news_normal_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/margin_least"
            android:maxLines="2"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_item_name_apps_news_normal_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_least"
                android:textColor="#89898A"
                android:textSize="@dimen/fontSize_smallest" />

            <TextView
                android:id="@+id/img_item_time_news_normal_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:textColor="#89898A"
                android:textSize="@dimen/fontSize_smallest" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

