<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:background="@drawable/bg_container_gray"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_large">

        <TextView
            android:id="@+id/txt_title_dialog_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_navigation"
            android:gravity="center"
            android:text="设置支付密码"
            android:textColor="@color/colorTxtTitle"
            android:textSize="@dimen/fontSize_big" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_spit"
            android:background="@color/colorTxtLabel" />

        <TextView
            android:id="@+id/txt_content_dialog_Pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_navigation"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="设置6位数支付密码"
            android:textColor="@color/colorTxtLabel"
            android:textSize="@dimen/fontSize_big" />

        <app.cloud.ccwb.cn.linlibrary.edit.PayPsdInputView
            android:id="@+id/dialog_input_dialog_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:inputType="number" />

        <!--忘记密码-->

        <TextView
            android:id="@+id/txt_dialog_forget_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="忘记密码?"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/fontSize_middle"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
